{% include "header.njk" %}
<div id="primary" class="content-area single">
    <main id="main" class="site-main">
        <article class="post">
            <div class="post-content">
                <div class="entry-content">
                    {{ content | safe }}
                </div><!-- .entry-content -->
            </div> <!-- .post-content -->
            <footer class="entry-footer entry-footer__single has-ui-font">
                <div class="post-time entry-footer__item">
                    <span class="updated-on">
                        <time class="updated updated-date published" datetime="{{date | htmlDateString}}">
                            Updated on {{ updated | readableDate("MM-DD-YYYY") }}    
                        </time>
                    </span>
                    <div class="entry-footer-wrapper entry-footer__item">
                        <div class="post-taxonomy entry-footer__item">
                            {% import "partials/entry-meta.njk" as entryMeta %}
                            {{ entryMeta.tags(tags) }}
                        </div><!--.post-taxonomy-->
                    </div><!-- .entry-footer-wrapper -->
                </div>
            </footer><!-- .entry-footer -->
        </article><!-- #post -->
    </main><!-- #main -->
</div><!-- #primary -->
{% include "footer.njk" %}