{
    "extends": ["react-app", "plugin:jsx-a11y/recommended"],
    "plugins": ["jsx-a11y"],
    "rules": {
        "jsx-a11y/label-has-for": "off",
        "max-len": [
            "warn", {
                "code": 80,
                "ignoreComments": true
            }
        ],
        "no-var": 1,
        "semi": "warn",
        "arrow-parens": "warn",
        "arrow-body-style": ["warn", "never"],
        "space-infix-ops": "warn",
        "no-trailing-spaces": "warn",
        "quotes": ["warn", "double"],
        "jsx-quotes": ["warn", "prefer-double"],
        "no-unused-vars": "warn",
        "no-shadow": "error",
        "camelcase": "warn",
        "indent": ["warn", 4]
    }
}